<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E84C3"
    tools:context=".UpdateActivity">

    <Button
        android:id="@+id/btnChonhinh"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnChuphinh"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:fontFamily="sans-serif-medium"
        android:text="Chọn hình"
        android:textColor="#32136A"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnChuphinh"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:fontFamily="sans-serif-medium"
        android:text="Chụp hình"
        android:textColor="#32136A"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imgHinhDaiDien"
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
         />

    <EditText
        android:id="@+id/edtten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgHinhDaiDien"
        android:layout_marginTop="36dp"
        android:textColorHint="#9C27B0" />

    <EditText
        android:id="@+id/edtsdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtten"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/btnLuu"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtsdt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-medium"
        android:text="Lưu"
        android:textColor="#32136A"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnHuy"
        style="@android:style/Widget.DeviceDefault.Light.Button"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtsdt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="58dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_toEndOf="@+id/btnLuu"
        android:layout_toRightOf="@+id/btnLuu"
        android:fontFamily="sans-serif-medium"
        android:text="Hủy"
        android:textColor="#32136A"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imgnen"
        android:layout_width="226dp"
        android:layout_height="301dp"
        android:layout_below="@+id/btnLuu"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="95dp"
        android:layout_marginBottom="17dp"
        android:scaleType="center"
        android:src="@drawable/wait" />

</RelativeLayout>